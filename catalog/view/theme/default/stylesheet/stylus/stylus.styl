.vertical-align {
    display: flex;
    align-items: center;
    flex-direction: row; 
}

#top{

    .wrap-top{

        .delivery-block{
            display: inline-block;
            display: inline-block;
            min-width: 200px;
            margin: 0 20px; 
            .info{
                color:#48B131;
                font-size: 15px;
            }
            .phone{
                font-size: 18px;
            }
        }

        .search-block{
            display: inline-block;
            max-width: 300px;

        }
        .cart-block{
            display: inline-block;
        }
        .language-block{
            display: inline-block;
        }

        #search{
            .input-lg{
                border: 1px solid #48B131;
                border-left: none;
                outline: none !important;
                border-bottom-right-radius: 4px;
                border-top-right-radius: 4px;

                transition:none;
                &:focus{
                    outline: none !important;
                }
            }
            .search-btn{
                margin-left: 10px;
                font-size: 18px;
                border-radius: 4px;
                background: none;
                background-color: #48B131;
                color:#fff; 
                padding: 10px 20px;
            }
            .icon-search-block{
                border: 1px solid #48B131;
                border-bottom-left-radius: 4px;
                border-top-left-radius: 4px;
                border-right: none;
                padding-top: 8px;
                padding-left: 10px;
                padding-right: 10px;
                .fa-search{
                    color:#48B131;
                }
            }

            .form-control:focus{
                border: 1px solid #48B131;
                border-left: none;
                outline: 0 !important;
                -webkit-box-shadow: none !important;
                box-shadow: none !important;
            }
        } 

        .cart-block{
            margin-bottom: 10px;
            margin-left: 20px;
            .btn-group.open .dropdown-toggle {
                -webkit-box-shadow: none !important; 
                box-shadow: none !important; 
            }

            #cart-total{
                background-color: #FFF8D8;
                padding: 7px 15px; 
            }
        }
    }
}
